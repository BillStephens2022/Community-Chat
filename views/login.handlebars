{{!-- login form page --}}
<div class="login m-4">
    <h4 class="text-center mb-4">Login Below:</h4>
    <form class="login-form">
    <!-- Email input -->
    <div class="form-outline mb-4">
      <input type="email" id="login-email" class="form-control" placeholder="Your email" required />
      <label class="form-label" for="login-email">Email address</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
      <input type="password" id="login-password" class="form-control" placeholder="Your password" required/>
      <label class="form-label" for="login-password">Password</label>
    </div>

    <!-- Login Submit button -->
    <button type="submit" class="btn btn-success btn-block mb-4 login-button" id="login-button" >Sign in</button>
    <h6 id="register">Not Signed Up? Register Here:</h6>
    <a class="btn btn-warning" id="register-here" href="/register">Register</a>
    
  </form>
  {{options.message}}
</div>
<script src="/js/login.js"></script>

