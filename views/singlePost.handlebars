{{!-- single post page displaying an area to leave a comment and save --}}
<section class="post">

  <h3 class="h3-single-post">Original Post</h3>
  {{> single-post-details post}}

  <h3 class="h3-comments">Comments</h3>
  <form class="submit-comment-form">
    <!-- Comment Text Area -->
    <div class="form-outline mb-3">
      <label class="form-label" for="new-comment-content">Post a comment here!</label>
      <textarea id="new-comment-content" class="form-control" placeholder="Enter comment here"></textarea>
    </div>

    <!-- Comment Submit button -->
    <button type="submit" class="btn btn-success btn-block mb-4 comment-submit-button" id="comment-submit-button">Post
      Comment</button>

  </form>
  <section class="comments-section">
    {{!-- {{> comment-details post.comments}} --}}
    {{!-- page shows all comments under a post --}}
    <section class="comments">
      {{!-- {{#each this}} --}}
      {{#each post.comments}}
      <div class="card mb-3 comment-card">
        <h5 class="comment-card-content">{{comment_content}}</h5>
        <h6 class="comment-card-author">Posted by: {{user.username}} on {{format_date date_created}}</h6>
      </div>
      {{/each}}
    </section>
  </section>

</section>
<script src="/js/createComment.js"></script>