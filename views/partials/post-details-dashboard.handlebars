
    {{!-- format for cards rendered for each post on the dashboard page. User will also see edit and delete buttons for each post --}}
    <div class="col-lg-12"> 
        
            <section class="card mb-3">
                <a href="/post/{{id}}" class="post-links"><h2 class="card-title">{{post_title}}</h2>
                <h5 class="card-content">{{post_content}}</h5></a>
                {{#if media.length}}
                <div class="container text-center image-container">
                {{#each media}} 
                    
                    {{#if image}}
                    
                        <img src="{{url}}" alt="image" class="card-image">
                    
                    {{/if}}
                  
                    {{#if video}}
                        {{{url}}}                 
                    {{/if}}
                    {{#if raw}}                   
                    <a href="{{url}}" download> ðŸ“‚file DownloadðŸ“‚ </a>
                    {{/if}}
                    
                {{/each}}
                </div>
            {{/if}}
                
                <h4 class="card-author">Posted by: {{user.username}} on {{format_date date_created}}</h4>
                <p class="container row justify-content-end"><span class="edit-delete-buttons"><a
                            href="api/posts/edit-post/{{id}}" class="btn btn-warning edit-button"
                            id="edit-{{id}}">Edit</a><button class="btn btn-danger delete-button"
                            id="delete-{{id}}">Delete</i></button></span></p>
            </section>
    </div>
