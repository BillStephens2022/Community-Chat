{{!-- format for cards rendered for the single post page --}}
<div class="d-flex justify-content-around">
<section class="card mb-3">
    <h2 class="card-title">{{post_title}}</h2>
    <h5 class="card-content">{{post_content}}</h5>
    {{#if media.length}}
    {{#each media as |image|}}
        <img src="{{image}}" alt="media">
      {{/each}}  
        {{/if}}
    <h4 class="card-author">Posted by: {{user.username}} on {{format_date date_created}}   
</section>
</div>
