{{!-- format for cards rendered for the single post page --}}
<div class="row justify-content-center" id="post-list">
    <div class="col-12 col-sm-8 col-lg-6" id="post-list-show">
        <section class="card mb-3">
            <h2 class="card-title">{{post_title}}</h2>
            <h5 class="card-content">{{post_content}}</h5>
            {{#if media.length}}
            <input value="{{json media}}" type="hidden" id="{{id}}"/>
            <div class="container text-center">
            {{#each media}}
            {{#if image}}
                <img src="{{url}}" alt="image" class="card-image img-fluid" data-bs-toggle="modal" data-bs-target="#exampleModal" data-post="{{../id}}" data-public-id="{{public_id}}">
            {{/if}}
            {{#if video}}
                {{{url}}}                        
            {{/if}}
            {{/each}}
            <p></p>
            {{#each media}} 
            {{#if raw}}                   
            <a href="{{url}}" download> <h6 class="text-start"> ðŸ“‚ {{file_name}} </h6></a>
            {{/if}}
            {{/each}}
            </div>
            
            {{/if}}
            <h4 class="card-author">Posted by: {{user.username}} on {{format_date date_created}}   
        </section>
    </div>
</div>